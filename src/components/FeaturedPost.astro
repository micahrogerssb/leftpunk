---
interface Props {
  title: string;
  excerpt: string;
  author: string;
  date: Date;
  slug: string;
}

const { title, excerpt, author, date, slug } = Astro.props;
---

<article class="border border-purple-800/30 bg-black/30 backdrop-blur-sm p-8 rounded-lg hover:border-punk-red transition-all duration-300 hover:shadow-[0_0_30px_rgba(255,46,76,0.1)]">
  <a href={`/articles/${slug}`} class="block group">
    <h2 class="text-2xl font-bold mb-3 group-hover:text-punk-red transition-colors duration-300">{title}</h2>
    <p class="text-gray-400 mb-4 font-light leading-relaxed">{excerpt}</p>
    <div class="flex justify-between items-center font-mono text-sm">
      <span class="text-punk-red font-medium">{author}</span>
      <time datetime={date.toISOString()} class="text-gray-400">
        {date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
      </time>
    </div>
  </a>
</article>