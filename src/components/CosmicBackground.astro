<div class="cosmic-background">
  <div class="stars"></div>
  <div class="planet planet-1"></div>
  <div class="planet planet-2"></div>
  <div class="planet planet-3"></div>
</div>

<style>
  .cosmic-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: linear-gradient(to bottom right, #0a0a0a, #120a1a, #1a0a1a);
    overflow: hidden;
  }

  .stars {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(1px 1px at 20px 30px, #ffffff08, transparent),
                      radial-gradient(1px 1px at 40px 70px, #ffffff08, transparent),
                      radial-gradient(1px 1px at 50px 160px, #ffffff08, transparent),
                      radial-gradient(1px 1px at 90px 40px, #ffffff08, transparent),
                      radial-gradient(1px 1px at 130px 80px, #ffffff08, transparent),
                      radial-gradient(1px 1px at 160px 120px, #ffffff08, transparent);
    background-repeat: repeat;
    background-size: 200px 200px;
    animation: twinkle 8s ease-in-out infinite alternate;
  }

  .planet {
    position: absolute;
    border-radius: 50%;
    opacity: 0.08;
  }

  .planet-1 {
    width: 80px;
    height: 80px;
    background: radial-gradient(circle at 30% 30%, #a855f7, #6b21a8);
    top: 25%;
    right: 15%;
    animation: float 12s ease-in-out infinite;
  }

  .planet-2 {
    width: 120px;
    height: 120px;
    background: radial-gradient(circle at 30% 30%, #8b5cf6, #4c1d95);
    bottom: 20%;
    left: 10%;
    animation: float 15s ease-in-out infinite reverse;
  }

  .planet-3 {
    width: 60px;
    height: 60px;
    background: radial-gradient(circle at 30% 30%, #7c3aed, #5b21b6);
    top: 45%;
    left: 30%;
    animation: float 18s ease-in-out infinite 2s;
  }

  @keyframes twinkle {
    0% { opacity: 0.2; }
    100% { opacity: 0.3; }
  }

  @keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0); }
  }
</style>